{
  "manifest_version": 3,
  "name": "Research Mouse Tracker",
  "version": "1.0",
  "description": "Records mouse movement and clicks for research.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
